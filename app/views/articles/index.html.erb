<div class="container">
<h1>Listing articles</h1>
<%= link_to 'New article', new_article_path%>


<section class="section">
    <div class="container">
        <% @articles.each do |article| %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= link_to article.title, article %></h5>
                    <p class="card-text"><%= article.text %></p>
                </div>
            </div>
        <% end %>
    </div>
</section>